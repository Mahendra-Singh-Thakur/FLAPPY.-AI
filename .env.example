# FlappyBird AI Environment Variables
# Copy this file to .env and update with your values

# Training Configuration
FLAPPY_HEADLESS=0  # Set to 1 for headless training (no graphics)
TRAINING_EPISODES=100000
CHECKPOINT_FREQUENCY=3000
PARALLEL_ENVS=6

# Model Configuration
MODEL_PATH=model/flappy_dqn_v2.pt
LEARNING_RATE=0.001
BATCH_SIZE=64
MEMORY_SIZE=10000
GAMMA=0.99
EPSILON_START=1.0
EPSILON_END=0.01
EPSILON_DECAY=0.995

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs/
TENSORBOARD_DIR=tensorboard_logs/

# Hardware Configuration
DEVICE=auto  # auto, cpu, cuda, mps
NUM_WORKERS=4

# Game Configuration
FPS=30
WINDOW_WIDTH=288
WINDOW_HEIGHT=512

# Random Seed (for reproducibility)
RANDOM_SEED=42

# Development
DEBUG=0
PROFILE=0
